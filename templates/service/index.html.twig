{% extends 'base.html.twig' %}

{% block title %}Garage V. PARROT - Services{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Liste des services</h1>

    <a href="{{ path('app_service_new') }}" class="btn btn-outline-secondary">Ajouter un nouveau service</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.title }}</td>
                <td>{{ service.description }}</td>
                
                <td>
                    <a href="{{ path('app_service_edit', {'id': service.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Il n'y a aucun service actuellement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
