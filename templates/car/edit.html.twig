{% extends 'base.html.twig' %}

{% block title %}Garage V. PARROT - Modification Annonce{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center">
    <h1 class="my-5">Modifier l'annonce {{car.title}}</h1>
</div>
<div class="container d-flex justify-content-center">
    <div class="col-8">
        {{ form_errors(form) }}

        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.image) }}
            {{ form_row(form.year) }}
            {{ form_row(form.mileage) }}
            {{ form_row(form.price) }}

            <button type="submit" class="btn btn-primary my-3">Modifier</button>
            {{ include('car/_delete_form.html.twig') }}
            <a href="{{ path('app_car_index') }}" class="btn btn-outline-secondary my-3">Retour Ã  la liste</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
