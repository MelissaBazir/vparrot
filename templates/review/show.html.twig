{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Review</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ review.title }}</td>
            </tr>
            <tr>
                <th>TextReview</th>
                <td>{{ review.textReview }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ review.score }}</td>
            </tr>
            <tr>
                <th>IsApproved</th>
                <td>{{ review.isApproved ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_review_index') }}">back to list</a>

    <a href="{{ path('app_review_edit', {'id': review.id}) }}">edit</a>

    {{ include('review/_delete_form.html.twig') }}
{% endblock %}
